# .env.example
# Environment variables template for reserve-api
# Copy this file to .env and fill in the actual values

# =============================================================================
# Application
# =============================================================================
NODE_ENV=development
APP_PORT=3000

# =============================================================================
# Security
# =============================================================================
# Admin token for protected admin endpoints
# IMPORTANT: Change this in production!
ADMIN_TOKEN=your-admin-token-here

# JWT token configuration
# IMPORTANT: Use strong, random secrets in production!
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=900s

# Refresh token configuration
REFRESH_SECRET=your-refresh-secret-here
REFRESH_EXPIRES_IN=30d
REFRESH_ROTATE=true

# PIN pepper for additional security
# Generate with: node -e "console.log(Buffer.from(require('crypto').randomBytes(32)).toString('base64'))"
SECURITY_PIN_PEPPER=your-base64-encoded-pepper-here

# =============================================================================
# Database (MySQL)
# =============================================================================
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=reserve_user
DB_PASSWORD=your-database-password-here
DB_DATABASE=reserve_db

# TypeORM configuration
# WARNING: Set to false in production! Use migrations instead.
DB_SYNCHRONIZE=true
DB_LOGGING=false

# =============================================================================
# MySQL Docker (for docker-compose)
# =============================================================================
MYSQL_ROOT_PASSWORD=your-mysql-root-password-here
MYSQL_DATABASE=reserve_db
MYSQL_USER=reserve_user
MYSQL_PASSWORD=your-mysql-password-here
MYSQL_PORT=3306

# =============================================================================
# phpMyAdmin (optional, dev only)
# =============================================================================
PHPMYADMIN_PORT=8080

# =============================================================================
# Timezone
# =============================================================================
TZ=Asia/Tokyo
