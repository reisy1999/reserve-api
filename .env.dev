# 開発環境用環境変数
# このファイルをコピーして.envとして使用してください

# MySQL Database
MYSQL_ROOT_PASSWORD=root_password_dev
MYSQL_DATABASE=reserve_db
MYSQL_USER=reserve_user
MYSQL_PASSWORD=reserve_password_dev
MYSQL_PORT=3306

# JWT Settings
JWT_SECRET=your-jwt-secret-key-for-development-only
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-for-development-only
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Admin Token
ADMIN_TOKEN=dev-admin-token-12345

# CORS Origins (フロントエンドのURLを許可)
CORS_ORIGINS=http://localhost:3000

# phpMyAdmin Port
PHPMYADMIN_PORT=8080

# --- Explicit DB envs for TypeORM ---
DB_HOST=mysql
DB_PORT=3306
DB_USERNAME=reserve_user
DB_PASSWORD=reserve_password_dev
DB_DATABASE=reserve_db
DB_SYNCHRONIZE=true
DB_LOGGING=false
