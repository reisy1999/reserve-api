# 開発環境用環境変数
# このファイルをコピーして.envとして使用してください

# MySQL Database
DB_HOST=mysql
DB_PORT=3306
DB_TYPE=mysql
DB_USERNAME=reserve_user
DB_PASSWORD=dev_reserve_password
DB_DATABASE=reserve_db

# Legacy MySQL variables (for backward compatibility)
MYSQL_ROOT_PASSWORD=dev_root_password
MYSQL_DATABASE=reserve_db
MYSQL_USER=reserve_user
MYSQL_PASSWORD=dev_reserve_password
MYSQL_PORT=3306

# JWT Settings
JWT_SECRET=your-jwt-secret-key-for-development-only
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-for-development-only
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Admin Token
ADMIN_TOKEN=dev-admin-token-change-in-production

# CORS Origins (フロントエンドのURLを許可)
CORS_ORIGINS=http://localhost:3000

# phpMyAdmin Port
PHPMYADMIN_PORT=8080